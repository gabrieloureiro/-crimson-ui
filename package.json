{
  "name": "crimson-ui",
  "version": "0.0.2",
  "author": "Gabriel Loureiro <gabrieloureirof@gmail.com>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrieloureiro/crimson-ui.git"
  },
  "bugs": {
    "url": "https://github.com/gabrieloureiro/crimson-ui/issues"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "eslint --fix --ext",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "dev": "lerna run dev --include-dependencies",
    "build": "lerna run build --include-dependencies",
    "test": "lerna run --parallel test",
    "publish": "lerna publish",
    "storybook": "lerna run storybook --scope=@crimson-ui/react",
    "build-storybook": "lerna run build-storybook --scope=@crimson-ui/react",
    "clean": "lerna clean -y",
    "clear:dist": "rm -rf packages/**/dist && yarn clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.0.1",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "babel-loader": "8.2.5",
    "commitizen": "^4.2.5",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "^8.0.1",
    "lerna": "5.5.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.33.0",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  }
}
