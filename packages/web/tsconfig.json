{
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/dist/**", "dist/*.js"],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "declarationDir": "dist/types",
    "typeRoots": ["dist/types", "node_modules/@crimson-ui/*/dist/types"],
    "outDir": "dist/esm"
  }
}
